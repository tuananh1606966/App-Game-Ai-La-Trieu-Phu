<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp">
    <TextView
        android:id="@+id/tv_title_high_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm cao"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="#2196F3"
        android:padding="5dp"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/highscore"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_high_score"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_title_high_score"
        android:layout_above="@id/btn_ok_high_score"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn_ok_high_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="OK"
        android:textSize="24sp"
        android:background="#8BC34A"/>


</RelativeLayout>